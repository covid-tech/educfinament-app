{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "environments/*": ["src/environments/*"],
      "classes/*": ["src/app/classes/*"],
      "components/*": ["src/app/components/*"],
      "models/*": ["src/models/*"],
      "services/*": ["src/services/*"],
      "pages/*": ["src/app/pages/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
